<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="392dp"
        android:layout_height="77dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:drawableLeft="@drawable/vector__3_"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:ems="10"
        android:text="The place that you will visit in the future"
        android:textColor="#A6A3A3"
        android:textColorHint="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_sql_save"
        android:layout_width="155dp"
        android:layout_height="54dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="53dp"
        android:layout_weight="1"
        android:backgroundTint="#C94820"
        android:text="save"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_sql_cancel"
        app:layout_constraintEnd_toStartOf="@+id/btn_sql_cancel"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_sql_cancel"
        android:layout_width="150dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="21dp"
        android:layout_weight="1"
        android:backgroundTint="#DA7455"
        android:text="cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="405dp"
        android:layout_height="559dp"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>